datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int         @id @default(autoincrement())
  username      String      @unique
  passwordHash  String
  email         String      @unique
  confirmed     Boolean     @default(false)
  premium       Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  games         Room[]
}

model Room {
  id            Int           @id @default(autoincrement())
  gamemode      Gamemode      @default(WORDLE)
  players       User[]
  results       String[]
  started       Boolean       @default(false)
  finished      Boolean       @default(false)
  roomSettings  RoomSetting
}

model RoomSetting {
  id          Int           @id @default(autoincrement())
  roomId      Int
  room        Room          @relation(fields: [roomId], references: [id])
  maxGuesses  Int
  maxPlayers  Int
  length      Int
}

enum Gamemode {
  WORDLE
  MATHLER
  XORDLE
  QUORDLE
  DORDLE
}

model GamemodeStatistics {
  id          Int           @id @default(autoincrement())
  timesPlayed Int           @default(0)
  gamemode    Gamemode
}

model Word {
  id          Int       @id @default(autoincrement())
  word        String    @unique
  length      Int
}

model XordleWord {
  id          Int       @id @default(autoincrement())
  word1       String
  word2       String
  length      Int

  @@unique([word1, word2])
}

model MathExpression {
  id          Int       @id @default(autoincrement())
  expression  String    @unique
  result      Int
  length      Int
}

